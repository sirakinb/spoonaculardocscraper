{
  "title": "Get Meal Plan Day",
  "group": "Meal Plans",
  "description": "Retrieve a meal planned day for the given user. The username must be a spoonacular user and the hash must the the user's hash that can be found in his/her account.",
  "endpoint_url": "https://api.spoonacular.com/mealplanner/{username}/day/{date}",
  "endpoint_method": "GET",
  "parameters": {
    "username": {
      "Name": "username",
      "Type": "string",
      "Example": "dsky",
      "Description": "The username."
    },
    "date": {
      "Name": "date",
      "Type": "string",
      "Example": "2020-06-01",
      "Description": "The date of the meal planned day in the format yyyy-mm-dd."
    },
    "hash": {
      "Name": "hash",
      "Type": "string",
      "Example": "4b5v4398573406",
      "Description": "The private hash for the username."
    }
  },
